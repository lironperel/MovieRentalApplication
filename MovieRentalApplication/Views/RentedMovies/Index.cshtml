@model IEnumerable<MovieRentalApplication.Entities.RentedMovie>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2>Rent log</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Movie.movieName)
        </th>
        <th>
            User Full Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Movie.movieName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.name)
        </td>
    </tr>
}

</table>
