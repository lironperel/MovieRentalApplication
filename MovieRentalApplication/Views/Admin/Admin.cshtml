
@{
    ViewBag.Title = "Admin Panel - Movie Rental App";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Scripts/jquery.js"></script>

<header class="jumbotron hero-spacer text-center">
    <h1>Admin Panel</h1>
</header>

<hr>

<ul class="nav nav-tabs">
    <li class="nav-item active">
        <a class="nav-link" data-toggle="tab" href="#movies-list">Movies list</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#rented">Rented movies log</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#users-list">Users list</a>
    </li>
</ul>

<div class="tab-content" id="tabs">
    <div class="tab-pane active" id="movies-list">@Html.Action("Index","Movies")</div>
    <div class="tab-pane" id="rented">@Html.Action("Index", "RentedMovies")</div>
    <div class="tab-pane" id="users-list">@Html.Action("Index", "Users")</div>
</div>

